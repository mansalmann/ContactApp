    <div class="container mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2>Daftar Contact</h2>
                <a href="/contact/tambahkontak" class="btn btn-primary mb-2">Tambah Data Kontak</a>

                <% if (pesanSistem.length !== 0) { %>
                    <div class="alert alert-success" role="alert">
                      <%= pesanSistem %>
                      </div>
                <% } %>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Nomor Handphone</th>
                        <th scope="col">Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                        <!-- cek dulu apakah data kontak ada atau tidak -->
                        <tr>
                            <td colspan="4">
                                <% if (dataKontak.length === 0) { %>
                                    <div class="alert alert-danger fw-bold" role="alert">
                                        Data Kontak masih kosong.<br>
                                      </div>
                                <% } %>
                            </td>
                        </tr>
                      
                        
                        <% dataKontak.forEach((kontak,index) => { index++ %>
                            <tr>
                                <th scope="row"> <%= index %></th>
                                <td> <%= kontak.nama %> </td>
                                <td> <%= kontak.nomor %></td>
                                <td>
                                    <a href="/contact/<%= kontak.nama %>" class="btn btn-success badge rounded-pill"> <i class="bi bi-info-circle"></i> Detail</a>
                                </td>
                              </tr>
                        <% }) %>
                     
                    </tbody>
                  </table>
            </div>
        </div>
    </div>

