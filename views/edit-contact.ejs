<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Kontak</h2>

            <% if (typeof errors !== "undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(dataError => { %>
                            <li><%= dataError.msg %></li>
                        <% }) %>
                    </ul>
                  </div>
            <% } %>
            <form method="post" action="/contact/update">
                <input type="hidden" name="namaLama" value="<%= contact.namaLama || contact.nama %>">

                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="nomor" class="form-label">Nomor Handphone</label>
                    <input type="text" class="form-control" id="nomor" name="nomor"  value="<%= contact.nomor %>" required>
                  </div>
             
                <button type="submit" class="btn btn-primary">Ubah Data Kontak</button>
              </form>
        </div>
    </div>
</div>